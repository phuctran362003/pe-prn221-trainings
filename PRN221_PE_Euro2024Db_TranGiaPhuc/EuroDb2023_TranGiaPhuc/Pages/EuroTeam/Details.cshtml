@page
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model EuroDb2023_TranGiaPhuc.Pages.EuroTeam.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (TempData["Message"] != null)
{
    <h2 class="text-info">@TempData["Message"]</h2>
}
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Point)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Point)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Group.GroupName)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Team.Group != null)
            {
                @Html.DisplayFor(model => model.Team.Group.GroupName)
            }
            else
            {
                <span>No Group Assigned</span>
            }
        </dd>


    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
