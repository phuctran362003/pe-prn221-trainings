@page
@model EuroDb2023_TranGiaPhuc.Pages.EuroTeam.DeleteModel

@{
    ViewData["Title"] = "Delete";
    string? email = HttpContext.Session.GetString("Email");
    int? role = HttpContext.Session.GetInt32("RoleId");

    if (string.IsNullOrEmpty(email) || role != 1)
    {
        TempData["ErrorMessage"] = "You do not have permission to perform this function";
        Response.Redirect("/Error");
        return; // Return immediately after redirect
    }
}

<h1>Delete</h1>
@if (TempData["Message"] != null)
{
    <h2 class="text-info">@TempData["Message"]</h2>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Point)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Point)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Position)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Group)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Group.GroupId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Team.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
